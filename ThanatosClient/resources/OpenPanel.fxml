<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.chart.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import java.lang.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.layout.AnchorPane?>

<HBox prefHeight="100.0" prefWidth="200.0" VBox.vgrow="ALWAYS" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.thanatos.OpenOrderController">
   <children>
      <VBox prefHeight="200.0" prefWidth="100.0" HBox.hgrow="ALWAYS">
         <children>
            <AnchorPane prefHeight="20.0" prefWidth="200.0" VBox.vgrow="NEVER">
               <children>
                  <Label fx:id="openLbl" text="Open Trades" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0" />
               </children>
            </AnchorPane>
            <TableView fx:id="openTradeTableView" prefHeight="200.0" prefWidth="200.0" VBox.vgrow="ALWAYS">
               <columns>
			     <TableColumn prefWidth="75.0" text="Ticket ID" />
			     <TableColumn prefWidth="75.0" text="Symbol" />
			     <TableColumn prefWidth="75.0" text="B/S" />
			     <TableColumn prefWidth="75.0" text="Amount" />
			     <TableColumn prefWidth="75.0" text="Type" />
			     <TableColumn prefWidth="75.0" text="Price" />
			     <TableColumn prefWidth="75.0" text="Current" />
			     <TableColumn prefWidth="75.0" text="P/L" />
               </columns>
               <columnResizePolicy>
                  <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
               </columnResizePolicy>
            </TableView>
         </children>
      </VBox>
   </children>
</HBox>
